<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".topics.IntroActivity">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/intronav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:background="@drawable/background_navbar"
        app:itemIconTint="@android:color/primary_text_dark_nodisable"
        app:itemTextColor="?android:attr/textColorSecondaryNoDisable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/intro_nav_menu" />




</androidx.constraintlayout.widget.ConstraintLayout>